{
  "name": "solana-suite",
  "main": "lib/index.js",
  "version": "0.0.1",
  "engines": {
    "node": "14.x"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "SOLANA_NETWORK=devnet tsc -p ./tsconfig.json",
    "build.prd": "SOLANA_NETWORK=mainnet-beta tsc -p ./tsconfig.prd.json",
    "test": "NODE_ENV=development SOLANA_NETWORK=devnet mocha -t 300000 --require ts-node/register -- ",
    "test-all": "NODE_ENV=development SOLANA_NETWORK=devnet mocha -t 300000 --require ts-node/register \"test/**/*.test.ts\"",
    "lint": "npx tslint --fix --project .",
    "docs": "typedoc src/ --name solana-suite",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.29.2",
    "form-data": "^4.0.0",
    "nft.storage": "^3.3.0",
    "node-fetch": "^3.0.0",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@tsconfig/recommended": "^1.0.1",
    "@types/bs58": "^4.0.1",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.17.5",
    "@types/python-struct": "^1.0.0",
    "ansi-regex": ">=5.0.1",
    "chai": "^4.3.4",
    "mocha": "^8.4.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "tslib": "^1.14.1",
    "tslint": "^6.1.3",
    "typedoc": "^0.22.4",
    "typedoc-plugin-markdown": "^3.10.4"
  }
}
