{
  "name": "solana-suite",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "version": "0.0.1",
  "engines": {
    "node": ">=14.*"
  },
  "files": [
    "tsconfig.json",
    "package.json",
    "package-lock.json",
    "dist"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json && sed -i -e 's/\"network\":.*\"/\"network\": \"devnet\"/' tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && sed -i -e 's/\"network\":.*\"/\"network\": \"devnet\"/' tsconfig.json",
    "build:prd-esm": "tsc -p tsconfig.esm.json && sed -i -e 's/\"network\":.*\"/\"network\": \"mainnet-beta\"/' tsconfig.json",
    "build:prd-cjs": "tsc -p tsconfig.cjs.json && sed -i -e 's/\"network\":.*\"/\"network\": \"mainnet-beta\"/' tsconfig.json",
    "test": "mocha -t 300000 --require ts-node/register -- ",
    "test:all": "mocha -t 300000 --require ts-node/register 'test/**/*.test.ts'",
    "lint": "npx tslint --fix --project ."
  },
  "dependencies": {
    "@solana/buffer-layout": "^3.0.0",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.29.2",
    "@tsconfig/node14": "^1.0.1",
    "@tsconfig/recommended": "^1.0.1",
    "@types/bs58": "^4.0.1",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.17.5",
    "form-data": "^4.0.0",
    "nft.storage": "^3.3.0",
    "node-fetch": "^3.0.0",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^8.4.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "tslib": "^1.14.1",
    "tslint": "^6.1.3",
    "typedoc-plugin-markdown": "^3.10.4"
  }
}
