{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
