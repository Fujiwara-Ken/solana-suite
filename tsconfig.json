{
  "compilerOptions": {
    "lib": [
      "ES6",
      "ES2017",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES6",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "src/**/**.ts"
  ]
}
