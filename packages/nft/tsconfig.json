{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "allowJs": true,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/**.ts"
  ]
}
