#!/bin/bash

CJS_JSON=dist/cjs/solana-suite.json
ESM_JSON=dist/esm/solana-suite.json

if [ "$1" = "main" ]; then
  echo "changed mainnet-beta network"
  sed -i -e 's/\"network\":.*\"/\"network\": \"mainnet-beta\"/' $CJS_JSON
  sed -i -e 's/\"network\":.*\"/\"network\": \"mainnet-beta\"/' $ESM_JSON
elif [ "$1" = "dev" ]; then
  echo "changed dev network"
  sed -i -e 's/\"network\":.*\"/\"network\": \"devnet\"/' $CJS_JSON
  sed -i -e 's/\"network\":.*\"/\"network\": \"devnet\"/' $ESM_JSON
else
  echo "No argument supplied"
fi

