#!/bin/bash

CJS_JSON=dist/cjs/solana-suite.json
ESM_JSON=dist/esm/solana-suite.json

if [ "$1" = "on" ]; then
  echo "changed debug on"
  sed -i -e 's/\"debugging\":.*/\"debugging\": true/' $CJS_JSON
  sed -i -e 's/\"debugging\":.*/\"debugging\": true/' $ESM_JSON
elif [ "$1" = "off" ]; then
  echo "changed debug off"
  sed -i -e 's/\"debugging\":.*/\"debugging\": false/' $CJS_JSON
  sed -i -e 's/\"debugging\":.*/\"debugging\": false/' $ESM_JSON
else
  echo "No argument supplied"
fi
  
