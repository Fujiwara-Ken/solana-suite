#!/bin/bash

if [ "$1" = "on" ]; then
  echo "changed debug on"
  sed -i -e 's/\"debugging\":.*/\"debugging\": true/' solana-suite.json
elif [ "$1" = "off" ]; then
  echo "changed debug off"
  sed -i -e 's/\"debugging\":.*/\"debugging\": false/' solana-suite.json
else
  echo "No argument supplied"
fi
  
