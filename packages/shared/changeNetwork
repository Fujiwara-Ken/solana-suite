#!/bin/bash

if [ "$1" = "mainnet" ]; then
  echo "changed mainnet-beta network"
  sed -i -e 's/\"network\":.*\"/\"network\": \"mainnet-beta\"/' solana-suite.json
elif [ "$1" = "dev" ]; then
  echo "changed dev network"
  sed -i -e 's/\"network\":.*\"/\"network\": \"dev\"/' solana-suite.json
else
  echo "No argument supplied"
fi

